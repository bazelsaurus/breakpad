native.filegroup(
  name = "gen-hdrs",
  srcs = gen_hdrs,
)

native.filegroup(
  name = "breakpad_configure_script",
  srcs = [ "configure" ]
)

stat_libs = [
  "libbreakpad.a",
  "libbreakpad_client.a",
]

native.filegroup(
  name = 'breakpad-exe',
  srcs = [
    "microdump_stackwalk",
    "linux_dumper_unittest_helper",
    "dump_syms",
    "minidump_upload",
    "core2md",
    "sym_upload",
    "minidump_stackwalk",
    "minidump_dump",
    "minidump-2-core",
  ],
)

native.filegroup(
  name = 'outs',
  srcs = stat_libs,
)

native.cc_library(
  name = 'lib',
  srcs = stat_libs,
  hdrs = [
    ":gen-hdrs",
  ],
  linkopts = [
    "-ldl",
  ],
  strip_include_prefix = "include/breakpad/",
  include_prefix = "",
  visibility = ["//visibility:public"],
)

genrule(
  local = 1,
  name = "build_w_breakpad_buildsystem",
  srcs = [
    ":breakpad_configure_script",
  ],
  outs = stat_libs + gen_hdrs,
  cmd = """
    BREAKPAD_CONFIGURE="$${PWD}/$(location :breakpad_configure_script)"
    BREAKPAD_ROOT=$$(dirname "$${BREAKPAD_CONFIGURE}")
    BREAKPAD_SOURCE_DIR="$${BREAKPAD_ROOT}/$(@D)/source"
    BREAKPAD_BUILD_DIR="$${BREAKPAD_ROOT}/$(@D)/build"
    BREAKPAD_INCLUDE_DIR="$$(dirname $(location libbreakpad.a))/include/breakpad"

    # For now, just build a generic 64-bit linux version.  
    # FIXME Add other configs later
    BREAKPAD_CFG_HOST="x86_64-linux-gnu"
    
    mkdir -p "$${BREAKPAD_SOURCE_DIR}"
    mkdir -p "$${BREAKPAD_BUILD_DIR}"
    mkdir -p "$${BREAKPAD_INCLUDE_DIR}"
    mkdir -p "$${BREAKPAD_ROOT}/$(@D)/include/breakpad"

    cp -RLf "$${BREAKPAD_ROOT}/." "$${BREAKPAD_SOURCE_DIR}" || true
    echo "PWD: $${PWD}"
    echo "BREAKPAD_ROOT: $${BREAKPAD_ROOT}"
    echo "CONFIGURE: $${BREAKPAD_CONFIGURE} --prefix=\"$${BREAKPAD_BUILD_DIR}\""
    echo "libbreakpad_client: $(location libbreakpad_client.a)"
    echo "libbreakpad: $(location libbreakpad.a)"
    echo "INCLUDE: $${BREAKPAD_INCLUDE_DIR}"
    echo "CC: $(CC)"
    echo "CC_FLAGS: $(CC_FLAGS)"

    pushd "$${BREAKPAD_SOURCE_DIR}"
    
    ./configure --host="$${BREAKPAD_CFG_HOST}" --target="$${BREAKPAD_CFG_HOST}" --prefix="$${BREAKPAD_BUILD_DIR}"
    CC=$(CC) AR=$(AR) NM=$(NM) STRIP=$(STRIP) OBJCOPY=$(OBJCOPY) CPPFLAGS="$(CC_FLAGS)" CXXFLAGS="$(CC_FLAGS)" CFLAGS="$(CC_FLAGS)" make 
    CC=$(CC) AR=$(AR) NM=$(NM) STRIP=$(STRIP) OBJCOPY=$(OBJCOPY) make install

    popd

    cp -Lv "$${BREAKPAD_BUILD_DIR}/lib/libbreakpad.a" $(location libbreakpad.a)
    cp -Lv "$${BREAKPAD_BUILD_DIR}/lib/libbreakpad_client.a" $(location libbreakpad_client.a)
    cp -LRv "$${BREAKPAD_BUILD_DIR}/include/breakpad/." "$${BREAKPAD_INCLUDE_DIR}"
  """,
)
